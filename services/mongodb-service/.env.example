# ============================================================
# MongoDB Service Environment Variables
# ============================================================

# MongoDB Connection
MONGODB_URI=mongodb://caas_app:caas_app_secret_2026@localhost:27017/caas_platform?authSource=admin
MONGODB_DATABASE=caas_platform

# For Replica Set (3 nodes)
# MONGODB_URI=mongodb://caas_app:caas_app_secret_2026@localhost:27017,localhost:27018,localhost:27019/caas_platform?replicaSet=caas-rs&authSource=admin

# Connection Pool
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_POOL_SIZE=100
MONGODB_MAX_IDLE_TIME_MS=30000
MONGODB_WAIT_QUEUE_TIMEOUT_MS=10000

# Timeouts
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000
MONGODB_SOCKET_TIMEOUT_MS=45000
MONGODB_CONNECT_TIMEOUT_MS=10000

# Retry Settings
MONGODB_RETRY_WRITES=true
MONGODB_RETRY_READS=true
MONGODB_MAX_RETRY_TIME_MS=30000

# Application
NODE_ENV=development
LOG_LEVEL=debug
