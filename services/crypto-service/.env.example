# Crypto Service Configuration

# Master Key (32 bytes hex) - CHANGE IN PRODUCTION
MASTER_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# HSM Provider (stub, aws-kms, azure-keyvault)
HSM_PROVIDER=stub
HSM_ROOT_KEY=

# Key Encryption
KEY_ENCRYPTION_ALGORITHM=aes-256-gcm

# Rotation Schedules (days)
SIGNED_PREKEY_ROTATION_INTERVAL_DAYS=7
MASTER_KEY_ROTATION_INTERVAL_DAYS=90

# Pre-Key Management
PREKEY_REPLENISHMENT_THRESHOLD=20
MIN_PREKEYS=100

# MongoDB
MONGODB_URI=mongodb://mongodb:27017
MONGODB_DATABASE=crypto_service

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Kafka
KAFKA_BROKERS=kafka:9092
KAFKA_CLIENT_ID=crypto-service

# Service
NODE_ENV=development
PORT=3003
LOG_LEVEL=info
