# Kafka Service Configuration

# Kafka Cluster
KAFKA_BROKERS=kafka-1:29092,kafka-2:29092,kafka-3:29092
KAFKA_CLIENT_ID=caas-service
KAFKA_CONNECTION_TIMEOUT=10000
KAFKA_REQUEST_TIMEOUT=30000

# Schema Registry
SCHEMA_REGISTRY_URL=http://schema-registry:8081
SCHEMA_COMPATIBILITY_MODE=BACKWARD

# Producer Configuration
PRODUCER_ACKS=all
PRODUCER_COMPRESSION=snappy
PRODUCER_BATCH_SIZE=16384
PRODUCER_LINGER_MS=5

# Consumer Configuration
CONSUMER_GROUP_ID=caas-consumer-group
CONSUMER_MAX_POLL_RECORDS=500
CONSUMER_SESSION_TIMEOUT_MS=30000

# Security (Optional - for production)
KAFKA_SASL_ENABLED=false
KAFKA_SASL_USERNAME=
KAFKA_SASL_PASSWORD=
KAFKA_SSL_ENABLED=false

# Monitoring
JMX_PORT=9999
LAG_ALERT_THRESHOLD=1000

# Error Handling
MAX_RETRIES=3
RETRY_INITIAL_DELAY_MS=100
RETRY_MAX_DELAY_MS=30000
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_RESET_MS=60000

# Topic Configuration
DEFAULT_PARTITIONS=3
DEFAULT_REPLICATION_FACTOR=3
MESSAGE_RETENTION_DAYS=30

# Environment
NODE_ENV=development
LOG_LEVEL=info