# ============================================================
# CAAS Platform Environment Configuration Template
# ============================================================
# Copy this file to .env and update the values
# ============================================================

# ============================================================
# ENVIRONMENT
# ============================================================
NODE_ENV=production
LOG_LEVEL=info

# ============================================================
# MONGODB CONFIGURATION
# ============================================================
MONGO_ROOT_USER=caas_admin
MONGO_ROOT_PASSWORD=CHANGE_THIS_PASSWORD
MONGO_APP_PASSWORD=CHANGE_THIS_PASSWORD

# ============================================================
# REDIS CONFIGURATION
# ============================================================
REDIS_PASSWORD=CHANGE_THIS_PASSWORD

# ============================================================
# ELASTICSEARCH CONFIGURATION
# ============================================================
ELASTICSEARCH_PASSWORD=CHANGE_THIS_PASSWORD

# ============================================================
# MINIO (S3-COMPATIBLE STORAGE) CONFIGURATION
# ============================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_THIS_PASSWORD

# ============================================================
# JWT CONFIGURATION
# ============================================================
JWT_SECRET=CHANGE_THIS_TO_STRONG_RANDOM_SECRET

# Generate new JWT keys with:
# openssl genrsa -out private.pem 2048
# openssl rsa -in private.pem -pubout -out public.pem
JWT_PRIVATE_KEY="PASTE_YOUR_PRIVATE_KEY_HERE"
JWT_PUBLIC_KEY="PASTE_YOUR_PUBLIC_KEY_HERE"

# ============================================================
# CORS CONFIGURATION
# ============================================================
CORS_ORIGINS=*

# ============================================================
# DEVELOPMENT TOOLS
# ============================================================
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=CHANGE_THIS_PASSWORD
