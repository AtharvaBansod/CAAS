# ============================================================
# CAAS Platform Environment Configuration Template
# ============================================================
# Copy this file to .env and update the values
# ============================================================

# ============================================================
# ENVIRONMENT
# ============================================================
NODE_ENV=production
LOG_LEVEL=info

# ============================================================
# MONGODB CONFIGURATION
# ============================================================
MONGO_ROOT_USER=caas_admin
MONGO_ROOT_PASSWORD=CHANGE_THIS_PASSWORD
MONGO_APP_PASSWORD=CHANGE_THIS_PASSWORD

# ============================================================
# REDIS CONFIGURATION
# ============================================================
REDIS_PASSWORD=CHANGE_THIS_PASSWORD

# ============================================================
# ELASTICSEARCH CONFIGURATION
# ============================================================
ELASTICSEARCH_PASSWORD=CHANGE_THIS_PASSWORD

# ============================================================
# MINIO (S3-COMPATIBLE STORAGE) CONFIGURATION
# ============================================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_THIS_PASSWORD

# ============================================================
# JWT CONFIGURATION
# Phase 4.5.z.x: Using HMAC (HS256) with JWT_SECRET
# ============================================================
JWT_SECRET=CHANGE_THIS_TO_STRONG_RANDOM_SECRET

# ============================================================
# SERVICE-TO-SERVICE AUTHENTICATION
# Phase 4.5.z.x: Shared secret for inter-service communication
# ============================================================
SERVICE_SECRET=CHANGE_THIS_TO_STRONG_RANDOM_SECRET

# ============================================================
# CORS CONFIGURATION
# ============================================================
CORS_ORIGINS=*

# ============================================================
# DEVELOPMENT TOOLS
# ============================================================
MONGO_EXPRESS_USER=admin
MONGO_EXPRESS_PASSWORD=CHANGE_THIS_PASSWORD
